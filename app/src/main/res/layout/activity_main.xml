<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            >

            <Button android:id="@+id/case_0"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

            <Button android:id="@+id/case_1"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

            <Button android:id="@+id/case_2"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:id="@+id/case_3"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

            <Button android:id="@+id/case_4"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

            <Button android:id="@+id/case_5"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:id="@+id/case_6"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

            <Button android:id="@+id/case_7"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

            <Button android:id="@+id/case_8"
                android:height="100dp"
                android:textSize="32sp"
                android:onClick="onClickStart"
                android:textColor="@color/colorBlack"
                />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tableLayout"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/gameStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/game_running"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            />

        <Button
            android:id="@+id/restart_game"
            android:onClick="onClickRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gameRestart"
            android:enabled="false"
            android:textSize="22sp"
            android:padding="20dp"
            android:textColor="@color/colorBlack"
            />

    </LinearLayout>


</RelativeLayout>